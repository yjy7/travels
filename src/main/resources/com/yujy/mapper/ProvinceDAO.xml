<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yujy.travels.dao.ProvinceDAO">


    <!--分页查询所有-->
    <select id="findByPage" resultType="Province">
        select id ,name ,tags,placecounts
        from t_province
        order by placecounts
        limit #{start},#{row}
    </select>

    <!--查询总条数-->
    <select id="findTotals" resultType="Integer">
        select count(id)
        from t_province
    </select>
    <!--省份添加-->
    <insert id="save" parameterType="Province" useGeneratedKeys="true" keyProperty="id">
        insert into t_province values(#{id},#{name},#{tags},#{placeCounts})
    </insert>
    <!--    省份删除-->
    <delete id="delete" parameterType="String">
        delete
        from t_province
        where id=#{id}
    </delete>

    <!--    根据id查询当前省份信息-->
    <select id="findOne" parameterType="String" resultType="Province">
        select id,name,tags,placecounts
        from t_province
        where id=#{id}
    </select>

    <!--    修改省份信息-->
    <update id="update" parameterType="Province">
        update t_province
        set name=#{name},tags=#{tags},placecounts=#{placeCounts}
        where id=#{id}
    </update>
</mapper>